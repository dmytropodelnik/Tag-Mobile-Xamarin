<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.FirstGameMenuPage"
             Title="{Binding Title}">

    <StackLayout Spacing="0" Padding="30" Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="Center">
        <Label Text="Best result: " FontSize="Large" TextColor="Black" HorizontalOptions="Center" Margin="20, 0, 150, 0"/>

        <Label Text="Rules:" FontSize="Large"  HorizontalOptions="Center" TextColor="Black" />
        <Label Text="{Binding Rules}" FontSize="Medium" Padding="5" />
        <Button Text="Start" VerticalOptions="End" />
    </StackLayout>
    
</ContentPage>