<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.FirstGameMenuPage"
             Title="{Binding Title}">

    <StackLayout Spacing="40" Padding="30" Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Rules:" FontSize="Large"  HorizontalOptions="Center" TextColor="Black" />
        <Label Text="{Binding Rules}" FontSize="Medium" Padding="5" />
        <Button Text="Start" VerticalOptions="End" Command="{Binding StartGameCommand}"/>
    </StackLayout>
    
</ContentPage>